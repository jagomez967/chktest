@model Reporting.Models.ResetPasswordViewModel
@{
    ViewBag.Title = Reporting.Resources.Account.lblTituloResetPassword;
}

@Styles.Render("~/Content/css")

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.HiddenFor(model => model.Code)
    <div id="wrapper" style="text-align: center">
        <div class="container ingreso" style="display: inline-block;">
            <div class="col-sm-6 col-sm-offset-3 col-xs-12">
                <div class="logo">
                    <a href="#">@Reporting.Resources.Account.lblLogoLabelCheckposPerformance</a>
                </div>
            </div>
            <div class="col-sm-6 col-sm-offset-3 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4 class="recuperarTitle">@ViewBag.Title.</h4>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "sr-only" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Reporting.Resources.Account.placeholderEmail })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = Reporting.Resources.Account.placeholderClave })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = Reporting.Resources.Account.placeholderConfirmarClave })
                        </div>
                    </div>
                    <div class="panel-footer">
                        <input type="submit" class="btn btn-accion" value="@Reporting.Resources.Account.btnRestablecerClave" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
}


