@using Reporting.ViewModels
@model RequestDownPriceTableRegion

@foreach (RequestTableByCountry countrie in Model.Countries)
{
    <div class="row" 
         style="margin-top:20px">
        <div class="container-fluid container-inside-row panel-default"
             style="background-image:url('../images/Flags/@(countrie.CountryCode).svg'); background-size: contain;background-repeat: no-repeat">
            <div class="col-xs-10">
                <div class="row" data-toggle="collapse" data-target="#demo_@(@countrie.Country)">
                    <div class="col-xs-offset-1 col-xs-4">
                        <div class="row subtitle-gap">@countrie.Country</div>                        
                    </div>
                </div>
            </div>       
        </div>
    </div>

    <div id="demo_@(@countrie.Country)" class="collapse">
       
       @Html.Partial("_PriceRequestTable", countrie.RequestTable)
       
    </div>
}

