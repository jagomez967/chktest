
@using Reporting.ViewModels
@model CompetitorAccountViewModel

<div class="row row-pr-detail">
    <div class="col-xs-4">
        <div class="col-xs-2"></div>
        <div class="col-xs-10 col-image-gap">
            <img src="data:image/png;base64,@(Model.Account.Image)"
                 alt="@(Model.Account.Name)"
                 class="img-gap-retail" />
            <span class="dot" style="background-color:@Model.Color"></span>
        </div>
    </div>
    <div class="col-xs-8">
        <div class="col-xs-2">@(Model.Inventory.ToString())</div>
        <div class="col-xs-2">@string.Format("${0:0.00}", (Model.SelfPrice))</div>
        <div class="col-xs-2">@string.Format("${0:0.00}", (Model.CompetitorPrice))</div>
        <div class="col-xs-2">@string.Format("{0:0.00}%", (Model.AccountGap))</div>
        <div class="col-xs-2 check_@(Model.SelfProductId)_account">
            <div>
                @Html.CheckBoxFor(m => m.Request, new { @class = "checkbox-round-gap" })
                @Html.LabelFor(m => m.Request, new { @style= "position:relative;display:none"})
                @Html.HiddenFor(m => m.SelfProductId)
                @Html.HiddenFor(m => m.Account.Id)
                @Html.HiddenFor(m => m.CompetitorProductId)
            </div>
        </div>
    </div>
</div>
